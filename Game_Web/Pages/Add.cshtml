@page
@model MyApp.Web.Pages.Games.AddModel
@{
    ViewData["Title"] = "Add Game";
}

<link rel="stylesheet" href="~/css/Add_Game.css">

<div class="add-game-page">
    <div class="add-page-header">
        <div>
            <div class="page-title">Add a new game</div>
            <div class="page-subtitle">Enter the details below and upload an image.</div>
        </div>
    </div>

    <form class="add-game-form" method="post" enctype="multipart/form-data">
        <div>
            <div asp-validation-summary="ModelOnly" class="hint"></div>

            <div class="form-group">
                <label asp-for="Input.Title">Name</label>
                <input asp-for="Input.Title" id="nameInput" class="form-control" />
                <span asp-validation-for="Input.Title" class="hint"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Description">Description</label>
                <textarea asp-for="Input.Description" rows="2" class="auto-resize form-control" id="descriptionInput"></textarea>
                <span asp-validation-for="Input.Description" class="hint"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Category">Category</label>
                <input asp-for="Input.Category" id="categoryInput" class="form-control" />
                <span asp-validation-for="Input.Category" class="hint"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Picture">Picture</label>
                <div class="file-input">
                    <input asp-for="Input.Picture" id="fileInput" type="file" accept="image/*" class="form-control-file" />
                    <div class="hint" id="fileName"></div>
                </div>
                <span asp-validation-for="Input.Picture" class="hint"></span>
            </div>

            <div style="margin-top:1rem; display:flex; gap:.6rem;">
                <button type="submit" class="btn btn-primary">Save Game</button>
                <a asp-page="/Index" class="btn btn-ghost" role="button">Cancel</a>
            </div>
        </div>

        <div class="side-card">
            <div style="margin-top:.75rem;">
                <div class="hint">Server-side preview is disabled. After saving you can view the game details.</div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
