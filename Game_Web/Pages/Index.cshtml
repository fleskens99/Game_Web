@page
@model IndexModel
@{ 
    ViewData["Title"] = "Home page";
}

<h2>Add your game</h2>

<form method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <div>
        <label asp-for="Game.Name"></label>
        <input asp-for="Game.Name" />
        <span asp-validation-for="Game.Name"></span>
    </div>
    <div>
        <label asp-for="Game.Description"></label>
        <textarea asp-for="Game.Description"></textarea>
        <span asp-validation-for="Game.Description"></span>
    </div>
    <div>
        <label asp-for="Picture">Picture</label>
        <input asp-for="Picture" type="file" />
        <span asp-validation-for="Picture"></span>
    </div>
    <div>
        <label asp-for="Game.Genre">Category</label>
        <input asp-for="Game.Genre" />
        <span asp-validation-for="Game.Genre"></span>
    </div>
    <div>
        <button type="submit">Submit</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
