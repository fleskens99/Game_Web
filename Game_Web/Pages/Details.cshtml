@page
@model DetailsModel
@{
    ViewData["Title"] = "Game Details";
}

<link rel="stylesheet" href="~/css/Details.css" />

<!DOCTYPE html>
<html>
<head>
    <title>@Model.Game.Title - Details</title>
</head>
<body>
    <h1>@Model.Game.Title</h1>
    <img src="@Model.Game.ImageUrl" alt="@Model.Game.Title" style="width:300px;" />
    <p><strong>Category:</strong> @Model.Game.Categorie</p>
    <p><strong>Rating:</strong> @Model.Game.Rating</p>
    <p><strong>Description:</strong> @Model.Game.Description</p>

    <a asp-controller="Games" asp-action="Index">Back to List</a>
</body>
</html>


